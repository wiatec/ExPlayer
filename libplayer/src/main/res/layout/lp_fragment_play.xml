<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".fragment.PlayFragment">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/control_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/control_top_view"
            android:padding="8dp"
            android:background="@color/lpColorT5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                tools:text="title"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <FrameLayout
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/tap_view"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:id="@+id/control_bottom_view"
            android:background="@color/lpColorT5"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ibt_play"
                android:scaleType="centerInside"
                android:cropToPadding="true"
                android:padding="8dp"
                android:src="@drawable/lp_ic_action_play"
                android:background="@android:color/transparent"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:id="@+id/tv_current_time"
                android:text="00:00:00"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/pb_duration"
                android:layout_marginStart="8dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="0"
                android:progressTint="@color/lpColorBlue1"
                android:progressBackgroundTint="@android:color/darker_gray"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_total_time"
                android:text="00:00:00"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/ibt_full_screen"
                android:scaleType="centerInside"
                android:cropToPadding="true"
                android:padding="8dp"
                android:src="@drawable/lp_ic_action_full_screen"
                android:background="@android:color/transparent"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading_view"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/pb_loading"
            android:indeterminateDrawable="@drawable/lp_pb_loading"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tv_loading"
            android:text="loading ..."
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>